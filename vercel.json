{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    {
      "src": "api/shared/product.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "apps/1_rent/index.html",
          "apps/2_job/index.html",
          "apps/3_social/index.html",
          "apps/4_deepfake_detector/index.html",
          "apps/5_vpn/index.html"
        ]
      }
    },
    { "src": "src/**/*", "use": "@vercel/static" },
    { "src": "apps/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/", "dest": "/apps/status/dist/index.html" },
    { "src": "/(.*)", "dest": "/api/shared/product.js" }
  ]
} 