{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    {
      "src": "api/shared/product.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "apps/**/*"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "dest": "/api/shared/product.js" }
  ]
} 